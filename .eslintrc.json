{
	"env": {
		"browser": true,
		"es2020": true,
		"node": true
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2022,
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint", "react", "prettier"],
	"settings": {
		"import/resolver": {
			"typescript": {
				"project": "."
			}
		},
		"react": {
			"version": "detect"
		}
	}
}
